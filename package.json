{
  "name": "pull-request-validator",
  "version": "1.0.0",
  "description": "Pull request validator",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "umd:main": "dist/umd/index.js",
  "types": "dist/types/index.d.js",
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:umd && npm run build:types",
    "build:cjs": "node tools/cleanup cjs && tsc -p config/tsconfig.cjs.json",
    "build:esm": "node tools/cleanup esm && tsc -p config/tsconfig.esm.json",
    "build:umd": "node tools/cleanup umd && webpack --config config/webpack.config.js",
    "build:types": "node tools/cleanup types && tsc -p config/tsconfig.types.json",
    "clean": "node tools/cleanup",
    "package": "npm run build && npm pack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suryashekhawat/pull-request-validator"
  },
  "bugs": {
    "url": "https://github.com/suryashekhawat/pull-request-validator/issues"
  },
  "homepage": "https://github.com/suryashekhawat/pull-request-validator#readme",
  "keywords": [
    "Pull",
    "Request",
    "Validator"
  ],
  "author": "Surya Pratap Singh Shekhawat <sing.shekhawat67@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "chalk": "^5.1.2",
    "commander": "^9.4.1",
    "gh": "^2.8.9",
    "inquirer": "^9.1.3",
    "js-yaml": "^4.1.0",
    "ora": "^6.1.2",
    "prompts": "^2.4.2",
    "typescript": "^4.8.4"
  },
  "volta": {
    "node": "16.18.0"
  },
  "engines": {
    "node": ">=16.18.0 <17"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.2",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.8.5",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "browser": {
    "child_process": false,
    "fs": false
  }
}